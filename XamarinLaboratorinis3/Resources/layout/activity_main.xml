<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Pavadinimas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pavadinimas"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/pavadinimasInput"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Fakultetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fakultetas"/>
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fakultetasInput"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="SudÄ—tingumas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sudetingumas"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vertinimas"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Diena:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diena"/>
        <Spinner
            android:id="@+id/dienosInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Laikas:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/laikas"/>
        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/laikasInput"
            android:timePickerMode="spinner"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Registruotis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registracija"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchas"
          />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Saugoti"
            android:id="@+id/saugojimas"/>
    </TableRow>
</TableLayout>